/* Pagination */
.pagination {
  display: flex;
  justify-content: center;
  margin: 2rem 0;
  gap: 0.5rem;
  flex-wrap: wrap;
}

.pagination .page-numbers {
  display: inline-block;
  padding: 0.5rem 1rem;
  background: #ccf2d3;
  color: #000;
  text-decoration: none;
  border-radius: 4px;
  font-weight: 600;
}

.pagination .current {
  background: #7dd6ab;
  color: #fff;
}

.pagination .page-numbers:hover {
  background: #a3e5c2;
}
/* end Pagination */
