/* Navigation */
nav {
  background: var(--background-color-primary);
}

nav ul {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  gap: 1rem;
  list-style: circle;
  margin: 0;
  padding: 0;
}

nav li {
  margin: 0;
}

nav a {
  display: block;
  padding: 0.5rem 0.75rem;
  text-decoration: none;
  color: inherit;
}

nav a:hover {
  text-decoration: underline;
}
/* end Navigation */
