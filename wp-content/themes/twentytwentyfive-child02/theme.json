{
    "$schema": "https://schemas.wp.org/trunk/theme.json",
    "version": 2,
    "settings": {
      "color": {
        "palette": [
          {
            "slug": "primary",
            "color": "#0073aa",
            "name": "Primary"
          },
          {
            "slug": "secondary",
            "color": "#fff8dc",
            "name": "Secondary (Cornsilk)"
          },
          {
            "slug": "foreground",
            "color": "#333333",
            "name": "Foreground"
          },
          {
            "slug": "background",
            "color": "#ffffff",
            "name": "Background"
          },
          {
            "slug": "tertiary",
            "color": "#f5f5f5",
            "name": "Tertiary"
          }
        ]
      },
      "typography": {
        "fontFamilies": [
          {
            "fontFamily": "\"Open Sans\", sans-serif",
            "slug": "primary",
            "name": "Primary (Open Sans)"
          },
          {
            "fontFamily": "-apple-system, BlinkMacSystemFont, \"Segoe UI\", Roboto, Oxygen-Sans, Ubuntu, Cantarell, \"Helvetica Neue\", sans-serif",
            "slug": "system-font",
            "name": "System Font"
          }
        ],
        "fontSizes": [
          {
            "slug": "small",
            "size": "13px",
            "name": "Small"
          },
          {
            "slug": "normal",
            "size": "16px",
            "name": "Normal"
          },
          {
            "slug": "medium",
            "size": "20px",
            "name": "Medium"
          },
          {
            "slug": "large",
            "size": "36px",
            "name": "Large"
          },
          {
            "slug": "x-large",
            "size": "42px",
            "name": "Extra Large"
          }
        ]
      },
      "layout": {
        "contentSize": "800px",
        "wideSize": "1200px"
      },
      "spacing": {
        "units": ["px", "em", "rem", "vh", "vw", "%"]
      },
      "custom": {
        "spacing": {
          "small": "15px",
          "medium": "30px",
          "large": "60px"
        }
      }
    },
    "styles": {
      "typography": {
        "fontFamily": "var(--wp--preset--font-family--primary)",
        "fontSize": "var(--wp--preset--font-size--normal)"
      },
      "blocks": {
        "core/button": {
          "typography": {
            "fontFamily": "var(--wp--preset--font-family--primary)",
            "fontWeight": "600"
          }
        },
        "core/heading": {
          "typography": {
            "fontFamily": "var(--wp--preset--font-family--primary)",
            "fontWeight": "700"
          }
        },
        "core/site-title": {
          "typography": {
            "fontFamily": "var(--wp--preset--font-family--primary)",
            "fontWeight": "800"
          }
        }
      },
      "elements": {
        "link": {
          "color": {
            "text": "var(--wp--preset--color--primary)"
          }
        }
      }
    },
    "templateParts": [
      {
        "name": "header",
        "title": "Header",
        "area": "header"
      },
      {
        "name": "footer",
        "title": "Footer",
        "area": "footer"
      }
    ]
  }